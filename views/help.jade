												h4 Responses
												ol
													li
														a(href="/resources/getting-started-with-smartclickr#presentation") Session Codes
													li
														a(href="/resources/getting-started-with-smartclickr#presentation") Data Analyzation
											hr.line.visible-phone
											li#account.span6
												h4 My Account
												ol
													li
														a(href="#") Password Changes
													li
														a(href="#") Billing Issues
									section#help-side.span3.clearfix
