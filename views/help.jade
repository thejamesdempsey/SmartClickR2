													li
														a(href="/resources/getting-started-with-smartclickr#qtypes") Multiple Choice
													li
														a(href="/resources/getting-started-with-smartclickr#qtypes") True/False
													li
														a(href="/resources/getting-started-with-smartclickr#qtypes") Free Response - Text
													li
														a(href="/resources/getting-started-with-smartclickr#qtypes") Free Response - Numeric
											hr.line.visible-phone
